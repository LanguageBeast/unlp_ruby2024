<%= form_with model: @producto, local: true, html: { multipart: true } do |form| %>
  <% if producto.errors.any? %>
    <div style="color: red">
      <ul>
        <% @producto.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group mb-3">
    <%= form.label :name, class: "form-control-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :description, class: "form-control-label" %>
    <%= form.textarea :description, class: "form-control" %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :unit_price, class: "form-control-label" %>
    <%= form.text_field :unit_price, class: "form-control" %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :available_stock, class: "form-control-label" %>
    <%= form.text_field :available_stock, class: "form-control" %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :images, "Upload Images", class: "form-control-label" %>
    <%= form.file_field :images, multiple: true, name: "producto[images][]", class: "form-control" %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :category, class: "form-control-label" %>
    <%= form.text_field :category, class: "form-control" %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :size, class: "form-control-label" %>
    <%= form.text_field :size, class: "form-control" %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :color, class: "form-control-label" %>
    <%= form.text_field :color, class: "form-control" %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :entry_date, class: "form-control-label" %>
    <%= form.date_field :entry_date, class: "form-control" %>
  </div>

  <div class="form-group mb-3">
    <%= form.submit "Create Product", class: "btn btn-primary" %>
      <%= link_to "Back to productos", productos_path, class: "btn btn-secondary" %>
  </div>
<% end %>
